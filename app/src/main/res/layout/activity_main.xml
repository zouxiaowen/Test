<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:text="登录"
                android:id="@+id/but_log"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/but_post"
                android:layout_width="match_parent"
                android:text="post获取数据"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/but_get"
                android:layout_width="match_parent"
                android:text="get获取银行卡数据"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/but_agreement"
                android:layout_width="match_parent"
                android:text="get获取协议数据"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/but_image"
                android:layout_width="match_parent"
                android:text="上传图片加密"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/but_ocr"
                android:layout_width="match_parent"
                android:text="身份证识别"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
